{
    "openapi": "3.0.0",
    "info": {
        "title": "Gemini AI REST API",
        "version": "1.0.0",
        "description": "API REST para interactuar con Gemini AI manteniendo contexto",
        "contact": {
            "name": "Gemini Proxy",
            "url": "https://github.com/beluwu12/gemini-proxy"
        }
    },
    "servers": [
        {
            "url": "/api",
            "description": "Serverless API"
        }
    ],
    "components": {
        "schemas": {
            "ApiResponse": {
                "type": "object",
                "properties": {
                    "response": {
                        "type": "string"
                    },
                    "sessionId": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "paths": {
        "/ai": {
            "get": {
                "summary": "Genera respuesta de IA",
                "parameters": [
                    {
                        "in": "query",
                        "name": "prompt",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "in": "query",
                        "name": "sessionId",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    }
}